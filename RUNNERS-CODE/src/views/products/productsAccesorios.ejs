<!DOCTYPE html>
<html>

<%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>
  <main>
    <!-- todos los productos -->
    <div class="container products-wrapper">
      <div class="row">
        <!-- Categoria Accesorios -->
        <div class="category-title">
          <h2>Accesorios</h2>
        </div>

        <% productAccesorios.forEach(function(productAccesorios){ 
          let finalPrice = (productAccesorios.price * ((100 - productAccesorios.discount) / 100)).toFixed(0)
      %>
<div class="col-12 col-sm-6 col-lg-3" id="accesorios">
<section class="product-box">
<a href="/products/<%= productAccesorios.id %>">
<figure class="product-box_image">
  <% if (productAccesorios.images.length != 0) { %>
    <img src="/img/<%= productAccesorios.images[0].image %>" alt="imagen de producto">
    <% } else { %>
    <img src="/img/default-avatar.jpg" alt="imagen de producto">
    <% } %>
</figure>
<article class="product-box_data">
  <p>
    <%= productAccesorios.name %>
  </p>
  <h2>$
    <%= toThousand(finalPrice) %>
  </h2>
  <span><%= productAccesorios.discount %> %OFF</span>

  <div class="buttons">
    <form action="#" method="get">
      <a href="edit/<%= productAccesorios.id %>"><i class="fa-solid fa-pen"></i><input type="button" name="edit-product" value="Editar producto" class="detail-add-trolle" style="display:none;"></a>
    </form>
    <form action="delete/<%= productAccesorios.id %>?_method=DELETE" type="submit" method="POST">
      <button><i class="fa-solid fa-xmark"></i></button>
    </form>
  </div>
</article>
</a>
</section>
</div>
<% }) %>
      </div>
    </div>
  </main>
  <%- include('../partials/footer') %>
</body>
</html>