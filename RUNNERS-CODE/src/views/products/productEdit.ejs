<!DOCTYPE html>
<html lang="es">


<%- include('../partials/head') %>

<body>

  <%- include('../partials/header') %>

  <main>
    <div class="edit-cuadro-ppal">
      <h2 style="margin-top: 15px;">EDITAR PRODUCTO</h2>
    <form action="/products/edit/<%=product.id%>?_method=PUT" id="productEdit" method="POST" enctype="multipart/form-data" class="edit-product">

      <div class="create-control-formulario">
        <label class="edit-label" for="CambioNombre">NOMBRE</label>
        <input type="text" name="name" id="productName" value="<%= product.name %>" placeholder="Nombre nuevo del producto">
        <span class="input-product-name-error"></span>
        <% if (locals.errors && errors.name) { %>
        <p style="color: red"> <%= errors.name.msg %> </p>
        <% } %>
      </div>
      <div class="cambios">
        <label class="edit-label" for="CambioDesc">DESCRIPCIÓN</label>
        <input type="text" name="description" id="productDescription" value="<%= product.description %>" placeholder="Descripcion nueva del producto" style="width:400px">
        <span class="input-product-description-error"></span>
        <% if (locals.errors && errors.description) { %>
        <p style="color: red"> <%= errors.description.msg %> </p>
        <% } %>
      </div>
      <div class="cambios">
        <label class="edit-label" for="CambioImagen">IMAGEN</label>
        <input type="file" id="image" name="imagen" multiple>
        <span class="input-product-image-error"></span>
      </div>
      <label class="edit-label" for="CambioCategoria">CATEGORÍA</label>
      <select name="category" id="category">
        <% allCategories.forEach(category => { %>
        <option value="<%= category.id %>" <% if (product.category.id == category.id) { %><%= 'selected' %><% }; %>><%= category.category_description %></option>
        <% }); %>
      </select>
      <% if (locals.errors && errors.category) { %>
      <p style="color: red"> <%= errors.category.msg %> </p>
      <% } %>

      <!--<div class="cambios">
        <label for="CambioCategoria">Cambio de categoria</label>
        <div>
          <input type="radio" name="category" value="Mujer"><label style="margin-left: 10px;"> Mujer</label>
        </div>
        <div>
          <input type="radio" name="category" value="Hombre"><label style="margin-left: 10px;"> Hombre</label>
        </div>
        <div>
