<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>

  <main>
    <div class="login-cuadro-ppal">
      <h1>Iniciar Sesión</h1>
      <div class="login-butt-group">
        <a href="/users/login"><button>Iniciar Sesión</button></a>
        <a href="/users/register"><button class="login-disabled">Registrarme</button></a>
      </div>

      <form class="login-placeholder" id="register-form" action='/users/login' method="POST">
        <div>
          <input type="email" name="email" id="emailLogin" placeholder="Email*" class="<%= locals.errors && errors.email ? 'is-invalid' : null %>"/>
          <span class="email-validation"></span>
          <% if (locals.errors && errors.email) { %>
          <div class="text-danger">
            <%= errors.email.msg %>
          </div>
          <% } %>
          <input type="password" name="password" id ="passwordLogin" placeholder="Contraseña*" class="<%= locals.errors && errors.password ?'is-invalid':null%>"/>
          <span class="password-validation"></span>
        </div>

        <div class="login-check">
          <div> <input class="check" type="checkbox" name="remember_user">Recordar mi usuario</div>
          <a href="#">¿Has olvidado tu contraseña?</a>
        </div>

        <button class="login" type="submit">INICIAR SESIÓN</button>
      </form>
    </div>


  </main>
  <%- include('../partials/footer') %>

  <script src="/js/validatorLogin.js"></script>

</body>


</html>