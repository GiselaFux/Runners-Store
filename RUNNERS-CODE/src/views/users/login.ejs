<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>

        <main>
            <div class="login-cuadro-ppal">
                <h1>Iniciar Sesión</h1>
                <div class="login-butt-group">
                    <a href="/users/login"><button>Iniciar Sesión</button></a>
                    <a href="/users/register"><button class="login-disabled">Registrarme</button></a>
                </div>
                <form class="register-form" action="/users/login" method="POST" enctype="multipart/form-data">
                <div>
                    <input type="email" placeholder="Email*" required class="login-placeholder">
                    <% if (locals.errors && errors.Email) { %>
                        <div class="text-danger">
                            <%= errors.Email.msg %>
                        </div>
                    <% } %>    
                    <input type="password" placeholder="Contraseña*" required class="login-placeholder">
                </div>
                <div class="login-check">
                    <p> <input type="checkbox" name="remember_user">Recordar mi usuario</p>
                    <a href="#">¿Has olvidado tu contraseña?</a>
                </div>

                <button class="login">INICIAR SESIÓN</button>
                </form>
            </div>


        </main>
        <%- include('../partials/footer') %>
</body>

</html>